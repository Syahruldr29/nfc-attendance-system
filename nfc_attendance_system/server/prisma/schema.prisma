generator client { provider = "prisma-client-js" }
datasource db { provider = "postgresql", url = env("DATABASE_URL") }
model User { id String @id @default(cuid()) email String @unique name String? password String role String? createdAt DateTime @default(now()) }
model Card { id String @id @default(cuid()) uid String @unique userId String? createdAt DateTime @default(now()) }
model Device { id String @id @default(cuid()) name String deviceKey String @unique active Boolean @default(true) createdAt DateTime @default(now()) }
model Tap { id String @id @default(cuid()) uid String userId String? deviceId String? timestamp DateTime @default(now()) }
